    <div class="container-fluid">
      <a class="navbar-brand">Receitas & Fotos </a>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
          <li class="nav-item"><a class="nav-link" href="#top">Topo</a></li>
          <li class="nav-item"><a class="nav-link" href="" data-bs-toggle="modal" data-bs-target="#modalMenu">Menu</a> </li>
          <li class="nav-item"><a class="nav-link" href="#imagens">Imagens</a></li>
          <li class="nav-item"><a class="nav-link" href="#users">Usu치rios</a></li>
        </ul>
      </div>
